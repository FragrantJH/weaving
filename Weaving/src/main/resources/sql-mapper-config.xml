<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<!-- 오라클 컬럼이 first_name 를 VO firstName 처럼 카멜케이스로 변환 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>


	<!-- mapper에서 사용할 mapper 별칭 지정 -->
	<typeAliases>
		<typeAlias alias="board" type="com.weaving.biz.board.BoardVO" />
		<typeAlias alias="documentForm" type="com.weaving.biz.documentForm.DocumentFormVO"/>
	</typeAliases>

</configuration>


	

