<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<!-- 오라클 컬럼이 first_name 를 VO firstName 처럼 카멜케이스로 변환 -->
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<setting name="localCacheScope" value="STATEMENT" ></setting>
		<setting name="cacheEnabled" value="false" />
	</settings>


	<!-- mapper에서 사용할 mapper 별칭 지정 -->
	<typeAliases>
		<typeAlias alias="board" type="com.weaving.biz.board.BoardVO" />
		<typeAlias alias="reply" type="com.weaving.biz.reply.ReplyVO" />
		<typeAlias alias="docForm" type="com.weaving.biz.docForm.DocFormVO"/>
		<typeAlias alias="room" type="com.weaving.biz.room.RoomVO"/>
		<typeAlias alias="reserv" type="com.weaving.biz.reserv.ReservVO"/>
		<typeAlias alias="emp" type="com.weaving.biz.emp.EmpVO"/>
		<typeAlias alias="dept" type="com.weaving.biz.dept.DeptVO"/>
		<typeAlias alias="cal" type="com.weaving.biz.cal.CalVO"/>
		<typeAlias alias="docBase" type="com.weaving.biz.doc.DocBaseVO"/>
		<typeAlias alias="toDo" type="com.weaving.biz.todo.ToDoVO"/>
		
	</typeAliases>

</configuration>


	

